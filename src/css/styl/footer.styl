.footer
  width 100%
  padding 20px 0
  background #fff
  color --color-lgray
  font-size 13px
  line-height 1.8

.footer--lite
  position absolute
  bottom 0
  background transparent
  .footer__lang-switch
    text-align center
    flex auto
  .footer__lang
    margin 0 8px  

.footer__wrapper
  display flex

.footer__license
  flex 3

.footer__lang-switch
  flex 2
  text-align right
  font-size 13px

.footer__lang
  display inline-block
  color --color-dgray
  margin-top 0px
  margin-left 16px
  text-decoration none
  &:not(.footer__lang--active)
    &:hover
      cursor pointer
      text-decoration underline

.footer__lang--active
  color --color-lgray


@media screen and (max-width: 620px)
  .footer__wrapper
    width calc(100% - 30px)
    flex-direction column-reverse
  .footer__lang-switch
    text-align left
    padding-bottom 10px
    margin-bottom 10px
    border-bottom 1px solid --color-bg
  .footer__lang
    margin-left 0
    margin-right 15px