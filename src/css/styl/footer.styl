.footer
  width 100%
  padding 20px 0
  background #fff
  color --color-mgray
  font-size 13px
  line-height 1.8
  
.footer__wrapper
  display flex
  
.footer__license
  flex 3
   
.footer__lang-switch
  flex 2
  text-align right
  font-size 13px
  
.footer__lang
  display inline-block
  color --color-dgray
  margin-top 0px
  margin-left 15px
  &:not(.footer__lang--active):hover
    cursor pointer
  
.footer__lang--active
  color --color-mgray
  

@media screen and (max-width: 620px)
  .footer__wrapper
    width calc(100% - 30px)
    flex-direction column-reverse
  .footer__lang-switch
    text-align left
    padding-bottom 10px
    margin-bottom 10px
    border-bottom 1px solid --color-bg
  .footer__lang
    margin-left 0
    margin-right 15px