.login-form__select-chain
  display flex
  justify-content center
  font-size inherit
  margin-bottom 16px
  
.login-form__radio
  display none
    
.login-form__radio-label
  position relative
  cursor pointer
  font-size 15px
  margin 0 40px
  &:before
    content ''
    display inline-block
    height 20px
    width 20px
    position relative
    top 4px
    border-radius 50%
    border 1px solid --color-mgray
    margin-right 16px
  &:after
    content ''
    display block
    height 8px
    width 8px
    position absolute
    left 6px
    top 10px
    border-radius 50%
    background --color-default
    transition all .3s ease
  &:hover
    &:before
      border-color --color-dgray
      
.login-form__radio-label--settings
  margin 0 16px
  &:before
    margin-right 8px
      
.login-form__radio:checked
  &+.login-form__radio-label
    &:before
      border-color --color-dgray
    &:after
      background --color-dgray

.login-form__bottom-link
  display block
  text-align center
  font-size 15px
  &:hover
    text-decoration underline

