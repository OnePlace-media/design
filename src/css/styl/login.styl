.login__wrapper
  position relative
  width 100%
  min-height 100vh
  padding-top 32px
  padding-bottom 63px

.login__logo
  width 168px
  height 27px
  margin 0 auto 24px

.login-form
  width 592px
  min-height 184px
  margin 0 auto 48px
  padding 24px 24px 32px
  background #fff

.login-form__header
  display flex
  width 100%
  justify-content center

.login-form__header--large
  padding 8px 0 0

.login-form__tab
  width 50%
  padding 7px 8px 9px
  border-bottom 1px solid --color-dgray
  border-top 1px solid #fff
  text-align center
  cursor pointer
  &:first-child
    border-right 1px solid --color-dgray

.login-form__tab--active
  border-top 1px solid --color-dgray
  border-bottom none
  cursor auto

.login-form__title
  text-align center
  line-height 22px

.login-form__title--em
  color --color-brand

.login-form__tab
  &:not(.login-form__tab--active)
    &:hover
      .login-form__title
        opacity .8

.login-form__body
  padding-top 24px

.login-form__item
  position relative
  margin-bottom 24px

.input
  outline none
  &::-webkit-input-placeholder
    color --color-lgray
  &::-moz-placeholder
    color --color-lgray
  &:-moz-placeholder
    color --color-lgray
  &:-ms-input-placeholder
    color --color-lgray
  &:focus
    border-color --color-mgray
    border-width 1px
    &::-webkit-input-placeholder
      color transparent
    &::-moz-placeholder
      color transparent
    &:-moz-placeholder
      color transparent
    &:-ms-input-placeholder
      color transparent
  
.login-form__input
  width 100%
  height 40px
  font-size 16px
  padding 4px 16px 4px
  border 1px solid --color-xlgray
  outline none
  &::-webkit-input-placeholder
    color --color-lgray
  &::-moz-placeholder
    color --color-lgray
  &:-moz-placeholder
    color --color-lgray
  &:-ms-input-placeholder
    color --color-lgray
  &:focus
    border-color --color-mgray
    border-width 1px
    &::-webkit-input-placeholder
      color transparent
    &::-moz-placeholder
      color transparent
    &:-moz-placeholder
      color transparent
    &:-ms-input-placeholder
      color transparent

.login-form__input--error
  border-color --color-brand
  border-width 2px

.login-form__alert
  display none
  position absolute
  bottom -20px
  left 16px
  font-size 12px
  color --color-brand

.login-form__info
  color --color-dgray
  font-size 13px
  margin 0 0 16px
  
.login-form__btn
  margin 0 auto 16px
  background --color-xlgray
  &:hover
    background --color-lgray
  &:last-child
    margin-bottom 0

