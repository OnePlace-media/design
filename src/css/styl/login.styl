.login__bg
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	background $bgcolor

.login__wrapper
	position relative

.login__logo
	width 175px
	height 29px
	margin 30px auto

.login__block
	width 460px
	height 500px
	margin 0 auto
	padding 20px
	background #fff

.login-form__header
	display flex
	width 100%
	margin-bottom 20px
	
.login-form__tab
	width 50%
	padding 10px 15px
	border-bottom 1px solid $dgray
	&:first-child
		border-right 1px solid $dgray

.login-form__tab--active
	border-top 1px solid $dgray
	border-bottom none
  
.login-form__heading
	font-size 1.275em

.login-form__item
	margin-bottom .5rem
	&:last-of-type
		margin-bottom 1rem
  
.login-form__input
	width 280px
	height 40px
	font-size 15px
	padding 3px 10px 5px
	border 1px solid $lgray

.login-form__alert
	padding-top 2px
	font-size 12px
	color $red

.login-form__btn
	width 280px
	height 40px
	font-size 15px
	font-weight 700
	text-transform uppercase
	letter-spacing .05em
	color #fff
	background $dred
	box-shadow 1px 1px 3px rgba(0,0,0,0)
	&:hover
		background $red
		box-shadow 1px 1px 3px rgba(0,0,0,0.4)
