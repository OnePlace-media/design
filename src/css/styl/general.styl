// General styles

html,body
  height 100%
  margin 0
  padding 0
  border 0

body
  font 16px/1.5 --font-base 
  color --color-dgray
  background --color-default

input, textarea, select, button
  font-family --font-base
  
*,
*:after,
*:before
  box-sizing border-box

.container
  width 1000px
  margin 0 auto
  transition all .3s ease
  clearfix()

.wrapper
  position relative
  background --color-bg

.main-content
  min-height calc(100vh - 60px)
  padding-top 80px

.avatar
  border-radius 50%
  background-position 50% 50%
  background-size cover
  background-color --color-bg
  overflow hidden

.btn
  display block
  border none
  cursor pointer
  outline none !important
  box-shadow none !important
  transition all .3s ease
  
.btn--large
  width 280px
  height 40px
  border-radius 0
  text-align center
  line-height 38px
  font-size 15px
  font-weight 700
  text-transform uppercase
  letter-spacing .01em

h1,h2,h3,h4,h5,h6,.h1,.h2,.h3,.h4,.h5,.h6,hgroup,
ul,ol,dd,p,figure,pre,table,fieldset,hr
    margin-top 0
    margin-bottom 0

.h1
  font 1.75em --font-base
  font-weight 700
  line-height 1.2

.h2
  font 1.3125em --font-base
  font-weight 700
  line-height 1.2

.h3
  font 1.125em --font-base
  font-weight 700
  line-height 1.2

.h4
  font 14px --font-base
  font-weight 700
  line-height 1.2

hr
  border none
  border-bottom 1px solid --color-mgray

.bold
  font-weight 700
  
.currency
  font-family --font-currency

.link
  color inherit
  transition all .3s ease
  text-decoration none
  &:hover, &:focus
    text-decoration none

.link--op
  color --color-brand
  &:hover, &:focus
    color --color-brand-hover
    
.link--ul
  text-decoration underline
  &:hover, &:focus
    text-decoration underline
    
.aside-header
  background --color-xlgray
  text-align center
  padding 12px 0
  
.aside-header__title
  text-transform uppercase
  letter-spacing 0.025em
  
.column-wrapper
  display flex
  flex-direction column
  
.dropdown
  display block
  position absolute
  z-index 10
  padding 8px 8px
  border-radius 3px
  background --color-default
  box-shadow 0 0 5px rgba(0,0,0,0.15)
  &:before,&:after
    display block
    content ''
    position absolute
    right calc(50% - 8px)
    top -16px
    border 8px solid transparent
  &:before
    width 16px
    height 16px
    border-bottom-color --color-lgray
  &:after
    width 15px
    height 15px
    border-bottom-color --color-default

@media screen and (max-width: 1040px)
  .container
    width 960px
    margin 0 auto 

@media screen and (max-width: 1020px)
  body
    font-size 15px
  .container
    width calc(100% - 40px)
    max-width 950px

@media screen and (max-width: 640px)
  body
    font-size 14px
  .container
    width 100%