.feed__wrapper
  display flex
  padding-bottom 24px

.feed__posts
  width 776px
  padding-right 16px
  
.feed__post
  width 100%
  display flex
  background --color-default
  padding 16px
  margin-bottom 16px
  &:last-of-type
    margin-bottom 0
  
$image2W = 275px
$image2H = 170px
    
.feed__post-image
  display block
  flex-basis auto
  width $image2W
  flex none
  height $image2H
  margin-right 16px
  background-position 50% 50%
  background-repeat no-repeat
  background-color transparent
  background-size cover
  
.feed__post-content
  flex-basis auto
  width 100%
  position relative
  padding-bottom 44px
  
.feed__post-reposted
  position relative
  margin-top -6px
  font-size 13px
  color --color-mgray
  margin-bottom 8px
  
.feed__repost-avatar
  display inline-block
  position relative
  top 6px
  border-radius 50%
  width 20px
  height 20px
  margin 0 4px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-default
  background-size cover

//.feed__post-abstract
//  display flex
//  flex-direction column

.feed__post-title
  font-size 18px
  line-height 24px
  margin-top -5px
  margin-bottom 8px
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
  
.feed__post-text
  font-size 14px
  color --color-mgray
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  line-height 21px
  max-height 42px
  -webkit-line-clamp 2
  -webkit-box-orient vertical
  
.feed__post-info
  position absolute
  width 100%
  bottom 0
  padding 12px 0 0
  border-top 1px solid --color-bg-dark
  display flex
  justify-content space-between
  align-items center
  font-size 13px
  color --color-lgray
  
.feed__post-avatar
  display block
  float left
  margin-right 8px
  width 32px
  height 32px
  
.feed__post-author
  display block
  line-height 16px
  .link
    position relative
    top -2px
  
.blog__post-data
  display flex
  justify-content flex-end
  .post-view__icon-comment
    top 5px
  
.feed__filters
  width 224px
  background --color-default
  &--fixed
    position fixed
    top 70px
    
.icon--filter
  position relative
  top 4px
  width 16px
  height 16px
  display inline-block
  fill --color-lgray
  margin-right 4px
    
.feed__filters-header
  padding 11px 16px 12px
  text-align center
  border-bottom 1px solid --color-bg
  
.feed__filters-title
  color --color-lgray
  text-transform uppercase
  letter-spacing 0.025em

.feed__filters-body
  padding 12px 16px