.settings__wrapper
  display flex
  align-items stretch

.settings__accounts
  width 312px
  margin-right 16px

.settings__tags
  width calc(100% - 328px)

.settings__block-body
  padding 24px
  background --color-default

.settings__accounts--active
  .btn-expand
    display none

.settings__no-accounts
  font-size 14px
  text-align center
  margin-top 16px
  margin-bottom 32px
    
.settings__accounts-list
  list-style none
  padding-left 0
  margin-bottom 32px

.settings__account
  display flex
  font-size 14px
  align-items center
  margin-bottom 12px

.settings__account-chain
  display inline-block
  width 24px
  height 24px
  margin-right 16px
  filter grayscale(100%)
  opacity .8
  background url('../img/golos.svg') 50% 50% no-repeat transparent
  background-size cover

.settings__account-chain--golos
  background-image url('../img/golos.svg')

.settings__account-chain--steem
  background-image url('../img/steem.svg')

.settings__account-name
  flex-basis calc(100% - 60px)

.settings__remove-btn
  position relative
  display inline-block
  width 20px
  height 20px
  &:hover
    cursor pointer
    
.settings__icon
  width 20px
  height 20px
  transition all .3s ease
  fill --color-lgray
  &:hover
    cursor pointer
    fill --color-mgray
  
.settings__account-action
  border-top 1px solid --color-xlgray
  padding-top 24px

.account-action__btn
  width 100%
  color --color-default
  background --color-link
  margin-bottom 16px
  &:hover
    background --color-link-hover
    
.settings__select-chain
  font-size 14px
    
.login-form__text--settings
  font-size 14px

.settings__tags-panel-wrapper
  display flex
  flex-flow row wrap

.settings__tags-panel
  position relative
  flex-basis 50%
  padding 0 24px 80px
  padding-right 0
  padding-left 24px
  &:first-child
    border-right 1px solid --color-xlgray
    padding-right 24px
    padding-left 0
    
.settings__tags-panel--active
  min-height 280px
  .btn-expand
    display none

.settings__tags-chain
  display block
  width max-content
  margin 0 auto 24px
  padding-left 32px
  
.settings__tags-chain--steem
  background url('../img/steem.svg') 0 50% no-repeat transparent
  background-size auto 24px
  
.settings__tags-chain--golos
  background url('../img/golos.svg') 0 50% no-repeat transparent
  background-size auto 24px
  
.btn-expand
  display block
  position absolute
  bottom 8px
  left calc(50% - 16px)
  width 55px
  height 55px
  border 1px solid --color-xlgray
  border-radius 50%
  &:before,&:after
    display block
    content ''
    position absolute
    top 26px
    left 10px
    height 1px
    width 33px
    background --color-xlgray
  &:after
    transform rotate(90deg)
  &:hover
    border-color --color-lgray
    &:before,&:after
      background --color-lgray
      
.settings__tags-panel:first-child
  .btn-expand
    left calc(50% - 40px)
      
.btn-expand--accounts
  position relative
  bottom auto
  left auto
  margin 0 auto 8px
      
.settings__tags-setup
  position relative
  flex-basis 100%
  padding-top 24px
  
.settings__clear-tags-btn
  display block
  padding 0
  position absolute
  bottom -8px
  right 0
  font-size 12px
  color --color-link
  text-decoration none
  &:hover
    color --color-link-hover
  
.settings__approve-btn
  display block
  position absolute
  bottom -60px
  right -24px
  padding 8px 8px
  border-radius 3px
  background --color-default
  box-shadow 0 0 5px rgba(0,0,0,0.05)
  &:before,&:after
    display block
    content ''
    position absolute
    right 32px
    top -16px
    border 8px solid transparent
  &:before
    width 16px
    height 16px
    border-bottom-color --color-lgray
  &:after
    width 15px
    height 15px
    border-bottom-color --color-default