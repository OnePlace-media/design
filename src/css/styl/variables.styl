// Fonts
--font-base = 'Noto Sans', sans-serif
--font-currency = 'PTS', 'Noto Sans', sans-serif

// Colors
--color-bg = #f2f2f2
--color-bg-lite = #f7f7f7
--color-bg-dark = darken(--color-bg, 7%)
--color-default = #ffffff
--color-dgray = #383838
--color-gray-tint = #bbbfbf //--color-gray-tint was #bcc0bf, initial red hue is #bfbcbb, blue is #bbbfbf
--color-mgray = darken(--color-gray-tint, 30%)
--color-lgray = darken(--color-gray-tint, 10%)
--color-xlgray = lighten(--color-gray-tint, 30%)
--color-xxlgray = lighten(--color-gray-tint, 55%)
--color-brand = #db4c2a
--color-brand-hover = darken(#b2341b, 0%)
--color-link = #259cb7
--color-link-hover = lighten(--color-link, 10%)
--color-golos = #2670b8
--color-steem = #4ca2f1
--color-lgreen = #c3e6cb
--color-xlgreen = #d4edda
--color-xlred = #f8d7da
--color-lred = #f5c6cb