.sidebar
  position fixed
  z-index 50
  overflow-y auto 
  top 0
  bottom 0
  left -220px
  width 240px
  background $bglite
  box-shadow 2px 0 10px rgba(0,0,0,0.2)
  padding-top 90px
  transition all .3s ease-out
  @media screen and (max-width: 1320px)
    width 200px
    left -180px
  @media screen and (max-height: 820px)
    padding-top 30px

.sidebar-opened
  left 0

.sidebar__nav
  margin-bottom 30px
  margin-right 20px

.sidebar__nav-toggle
  position absolute
  top 0
  bottom 0
  right 0
  width 20px
  background $bgcolor
  cursor pointer
    
.sidebar__nav-list
  padding-left 0
  list-style none
        
.sidebar__nav-link
  display block
  position relative
  padding 4px 40px 5px
  overflow hidden
  text-overflow ellipsis
  font-size 15px
  letter-spacing 0.025em
  color $dgray
  &:hover
    background $xxlgray
  &:active
    opacity 0.9
  &:before
    display block
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    width 0
    background $red
    transition all .3s ease
  @media screen and (max-width: 1320px)
    padding 5px 30px 6px
    font-size 14px
    
.sidebar__nav-item--active>.sidebar__nav-link:before
  width 4px