.sidebar
  position fixed
  z-index 50
  overflow-y auto 
  top 0
  bottom 0
  left -220px
  width 240px
  background --color-bg-lite
  box-shadow 2px 0 10px rgba(0,0,0,0.2)
  padding-top 78px
  transition all .3s ease-out
  @media screen and (max-width: 1540px)
    width 200px
    left -180px
  @media screen and (max-height: 820px)
    padding-top 58px
  @media screen and (max-height: 760px)
    padding-top 27px

.sidebar-opened
  left 0 !important
  
.sidebar__overlay
  display none

.sidebar__nav
  margin-bottom 30px
  margin-right 20px

.sidebar__nav-toggle
  position absolute
  top 0
  bottom 0
  right 0
  width 20px
  background --color-bg-lite
  transition all .2s ease
  &:hover
    cursor pointer
    background --color-bg

.sidebar__nav-toggle-btn
  display block
  width 10px
  height 25px
  position absolute
  top calc(50% - 12px)
  left 8px
  transition all .2s ease
  &:before,&:after
    display block
    width 3px
    height 13px
    border-radius 1px
    content ''
    position absolute
    left 5px
    background --color-lgray
    transition all .2s ease
  &:before
    top 0
    transform-origin 50% 100%
    transform rotate(-35deg)
  &:after
    bottom 0
    transform-origin 50% 0%
    transform rotate(35deg)

.sidebar__nav-toggle
  &:hover
    .sidebar__nav-toggle-btn
      &:before,&:after
        background --color-mgray

.sidebar-opened
  .sidebar__nav-toggle-btn
    left -1px
    &:before
      transform rotate(35deg)
    &:after
      transform rotate(-35deg)

.sidebar__nav-list
  padding-left 0
  list-style none

.sidebar__nav-link
  display block
  position relative
  padding 4px 20px 5px 40px
  overflow hidden
  text-overflow ellipsis
  font-size 15px
  letter-spacing 0.025em
  color --color-dgray
  &:active
    opacity 0.9
  &:before,&:after
    display block
    content ''
    position absolute
    top 0
    bottom 0
  &:before
    left 0
    width 0
    background --color-brand
    transition all .3s ease
  &:after
    left 0
    right 0
    background --color-xlgray
    opacity 0
    transition all .1s ease
    z-index -1
  &:hover
    &:after
      opacity 1
  @media screen and (max-width: 1540px)
    padding 5px 12px 6px 32px
    font-size 14px
  @media screen and (max-height: 760px)
    padding 4px 12px 5px 32px

.sidebar__nav-link-active
  color --color-dgray
  &:before
    width 4px