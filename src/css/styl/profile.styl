.blog__header
  width 100%
  height 88px
  background url('image.png') 0 0 no-repeat transparent
  background-size cover
  margin-bottom 16px
  
.blog__profile-wrapper
  width 100%
  display flex
  
.blog__profile-avatar
  width 220px
  height 220px
  background url('image.png') 0 0 no-repeat transparent
  background-size cover
  border 8px solid --color-default
  border-radius 50%
  position relative
  top -88px
  
.blog__profile-info
  width calc(100% - 232px)
  margin-left 16px
  padding 16px
  background --color-default
  
.profile__top-wrapper
  display flex
  justify-content space-between
  margin-bottom 8px
  
.profile__name
  margin-bottom 0
  
.profile__btn-follow
  color --color-link
  font-size 18px
  &:hover
    cursor pointer
    
.profile__btn-following
  font-size 18px
  
.profile__about
  font-size 15px
  color --color-mgray
  margin-bottom 24px
  
.profile__info-wrapper
  display flex
  margin-bottom 32px
  
.profile__info-tab
  font-size 15px
  flex-basis 50%
  
.profile__bottom-wrapper
  border-top 1px solid --color-xlgray