$imageW = 382px
$imageH = $imageW/2

.profile__header
  width 100%
  height 88px
  background-position 50% 0
  background-repeat no-repeat
  background-color --color-xlgray
  background-size cover
  margin-bottom 16px
  
.profile__wrapper
  position relative
  width 100%
  display flex
  align-items flex-start
  margin-bottom 16px
  
.profile__avatar
  width 216px
  height 216px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-xlgray
  background-size cover
  border 8px solid --color-default
  border-radius 50%
  position absolute
  top -88px
  left 0
  
.profile__user
  width calc(100% - 232px)
  margin-left 232px
  padding 11px 24px 6px
  background --color-default
  
.profile__top-wrapper
  display flex
  justify-content space-between
  margin-bottom 8px
  
.profile__name
  margin-bottom 0
  
.profile__reputation
  display inline-block
  font-size 13px
  font-weight 400
  text-align center
  line-height 18px
  height 20px
  padding 0 4px
  margin-left 8px
  border 1px solid --color-lgray
  border-radius 3px
  
.profile__btn-follow
  color --color-link
  font-size 16px
  &:hover
    cursor pointer
    
.profile__btn-following
  font-size 16px
  
.profile__btn-more
  display inline-block
  position relative
  width 18px
  height 16px
  margin-left 8px
  &:before,&:after
    display block
    width 11px
    height 2px
    border-radius 1px
    content ''
    position absolute
    top 10px
    background --color-lgray
    transition all .3s ease
  &:before
    top 9px
    left 0
    transform-origin 50% 100%
    transform rotate(45deg)
  &:after
    right 0
    transform-origin 50% 0%
    transform rotate(-45deg)
  &:hover
    cursor pointer
    &:before,&:after
      background --color-mgray
      
.profile__follow-options
  display block
  list-style none
  padding 0
  z-index 20
  position absolute
  top 25px
  right -5px
  border-radius 3px
  font-size 15px
  background --color-default
  box-shadow 1px 1px 10px rgba(0,0,0,0.2)
  
.profile__follow-options-item
  color --color-mgray
  padding 8px 16px
  &:hover
    cursor pointer
    background --color-bg-lite
    color --color-dgray
  
.profile__about
  font-size 15px
  color --color-mgray
  margin-bottom 24px
  
.profile__info-wrapper
  display flex
  margin-bottom 32px
  
.profile__info-tab
  font-size 15px
  flex-basis 50%
  
.profile__info-item
  color --color-lgray
  margin-right 4px
  
.profile__bottom-wrapper
  display flex
  padding-top 5px
  border-top 1px solid --color-xlgray
  
.profile__user-data
  flex-basis 33.33%
  display flex
  justify-content center
  align-items center
  color --color-mgray
  
.profile__data-value
  font-size 24px
  font-weight 700
  color --color-dgray
  margin-right 12px
  
.blog__header
  width 100%
  display flex
  justify-content flex-start
  border-bottom 1px solid --color-xlgray
  margin-bottom 16px
  
.blog__header-tab
  position relative
  top 1px
  padding 4px 0 1px
  margin-right 32px
  font-size 16px
  color --color-mgray
  transition all .3s ease
  &--active
    color --color-dgray
    border-bottom 4px solid --color-brand
  &:not(.blog__header-tab--active)
    &:hover
      color --color-dgray
      cursor pointer
      
.blog__post
  width 100%
  display flex
  background --color-default
  margin-bottom 16px
  
.blog__post-image
  display block
  flex-basis auto
  width $imageW
  flex none
  height $imageH
  background-position 50% 0
  background-repeat no-repeat
  background-color transparent
  background-size cover
  
.blog__post-content
  flex-basis auto
  width 100%
  position relative
  padding 16px 32px 54px
  
.blog__post-reposted
  position relative
  margin-top -10px
  font-size 14px
  color --color-mgray
  margin-bottom 8px
  
.blog__repost-avatar
  display inline-block
  position relative
  top 6px
  border-radius 50%
  width 24px
  height 24px
  margin 0 6px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-bg
  background-size cover

.blog__post-title
  font-size 22px
  margin-bottom 12px
  
.blog__post-text
  font-size 14px
  color --color-mgray
  
.blog__post-info
  position absolute
  bottom 8px
  left 32px
  right 32px
  border-top 1px solid --color-xlgray
  padding-top 8px
  display flex
  justify-content space-between
  align-items center
  font-size 14px
  color --color-lgray
  
.blog__post-data
  display flex
  justify-content flex-end
  .post-view__icon-comment
    top 5px