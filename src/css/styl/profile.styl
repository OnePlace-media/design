$imageW = 270px
$imageH = 167px

.profile__header
  flex-basis 100%
  height 124px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-bg
  background-size cover
  margin-bottom 24px
  
.profile__wrapper
  position relative
  width 240px
  padding-right 16px
  margin-bottom 16px
  
.profile__avatar
  width 224px
  height 224px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-xlgray
  background-size cover
  border 8px solid --color-default
  border-radius 50%
  margin-top -96px
  margin-bottom 12px
  
.profile__top-block
  position relative
  background --color-default
  padding 12px 16px 12px
  margin-bottom 12px
  
.profile__name
  text-align left
  font-size 20px
  margin-bottom 8px
  &:last-child
    margin-bottom 0
  
.profile__reputation
  display inline-block
  position absolute
  top 16px
  right 16px
  background --color-default
  font-size 12px
  font-weight 400
  text-align center
  line-height 18px
  height 20px
  padding 0 4px
  border 1px solid --color-lgray
  border-radius 3px
  
.btn-follow
  width 100%
  height 40px
  text-align center
  font-size 15px
  line-height 38px
  color --color-link
  border 1px solid --color-link
  &:hover
    cursor pointer
    color --color-link-hover
    border 1px solid --color-link-hover
    
.btn-follow--active
  border-color --color-lgray
  color --color-mgray
  &:hover
    cursor auto
    border-color --color-lgray
    color --color-mgray

.btn-follow--post
  display none
  width 50%
    
.btn-follow__more
  display inline-block
  position relative
  float right
  width 18px
  height 14px
  margin 12px 8px
  margin-left 0
  &:before,&:after
    display block
    width 1px
    height 11px
    border-radius 1px
    content ''
    position absolute
    top 0
    left 50%
    background --color-lgray
    transform-origin 50% 100%
    transition all .3s ease
  &:before
    transform rotate(45deg)
  &:after
    transform rotate(-45deg)
  &:hover
    cursor pointer
    &:before,&:after
      background --color-mgray
      
.btn-follow__options
  display block
  list-style none
  padding 0
  z-index 20
  position absolute
  top 23px
  right -8px
  border-radius 3px
  font-size 14px
  line-height 1.3
  background --color-default
  box-shadow 1px 1px 10px rgba(0,0,0,0.2)
  
.btn-follow__options-item
  color --color-mgray
  padding 8px 16px
  &:hover
    cursor pointer
    background --color-bg-lite
    color --color-dgray
  
.profile__about
  font-size 13px
  color --color-mgray
  overflow hidden
  text-overflow ellipsis
  word-wrap break-word
  margin-bottom 16px
  &:last-child
    margin-bottom 0
  
.profile__info-block
  padding-top 12px
  margin-top 16px
  border-top 1px solid --color-xlgray
  font-size 14px
  color --color-dgray
  
.profile__info-item
  display block
  padding-left 25px
  position relative
  overflow hidden
  text-overflow ellipsis
  word-break break-word
  margin-bottom 8px
  &:last-child
    margin-bottom 0
  &:before
    display block
    content ''
    position absolute
    top 1px
    left 0
    width 18px
    height 20px
    background url('../img/profile-icons.svg') 0 0 no-repeat transparent
    background-size 36px 20px
    
.profile__info-item--website
  &:before
    background-position -18px 0
  
.profile__bottom-block
  background --color-default
  padding 8px 16px
  margin-bottom 12px
  
.profile__user-data
  display flex
  text-align left
  align-items center
  font-size 15px
  color --color-mgray
  padding 2px 0
  
.profile__data-value
  font-size 24px
  font-weight 700
  color --color-dgray
  margin-right 8px
  
.profile__tags-filter
  width 224px
  background --color-default
  padding 12px 16px 12px
  margin-bottom 12px
  &--fixed
    position fixed
    top 70px
  
.tags-filter__title
  display inline-block
  text-align left
  margin-bottom 12px
  
.tags-filter__spinner
  padding 8px 0 16px
  
.tags-list__item--filter
  display inline-block
  border-color --color-xlgray
  background --color-bg
  width max-content
  transition all .3s ease
  
.tags-list__item--selected
  background --color-xlgreen
  border-color --color-lgreen
  color #155724
  
.tags-list__item--removed
  color --color-brand
  border-color --color-lred
  background --color-xlred
  text-decoration line-through
  .tags-list__remove-item
    display none
    
.profile__tags-more
  display flex
  flex-flow row-reverse
  font-size 12px
  justify-content space-between
  padding-top 4px
  
.tags-filter__close-modal
  position absolute
  top 0
  right -32px
  display block
  width 24px
  height 24px
  opacity 0.8
  transition all .3s ease
  &:before,&:after
    display block
    content ''
    background --color-default
    position absolute
    width 24px
    height 3px
    border-radius 1px
    top 11px
    left 0
  &:before
    transform rotate(45deg)
  &:after
    transform rotate(-45deg)
  &:hover
    cursor pointer
    opacity 1
  
.tags-filter__modal
  position relative
  display block
  width 600px
  padding 16px 24px 12px
  background --color-default
  margin 96px auto 40px
  
.tags-filter__modal-header
  width 100%
  display flex
  justify-content space-between
  align-items center
  border-bottom 1px solid --color-bg
  padding-bottom 12px
  margin-bottom 12px
  
.tags-list__wrapper--modal
  max-height calc(100vh - 210px)
  overflow-y scroll
  
.tags-filter__clear
  font-size 12px
  
.blog__wrapper
  display flex
  flex-wrap wrap
  
.blog
  width calc(100% - 240px)
  margin-bottom 24px
  
.blog__header
  width 100%
  display flex
  justify-content flex-start
  border-bottom 1px solid --color-xlgray
  margin-bottom 12px
  
.blog__header-tab
  position relative
  top 1px
  padding 0 0 2px
  border-bottom 2px solid transparent
  margin-right 24px
  font-size 15px
  color --color-mgray
  transition all .3s ease
  &--active
    color --color-dgray
    border-bottom 2px solid --color-brand
  &:not(.blog__header-tab--active)
    &:hover
      color --color-dgray
      cursor pointer
      
.blog__no-posts
  background --color-default
  padding 24px 24px
  font-size 15px

.blog__post
  width 100%
  display flex
  background --color-default
  margin-bottom 12px
  &:last-of-type
    margin-bottom 0
  
.blog__post-image
  display block
  flex-basis auto
  width $imageW
  flex none
  height $imageH
  border-right 1px solid --color-bg
  background-position 50% 0
  background-repeat no-repeat
  background-color transparent
  background-size cover
  
.blog__post-content
  flex-basis auto
  width 100%
  position relative
  padding 16px 24px 48px
  
.blog__post-reposted
  position relative
  margin-top -12px
  font-size 13px
  color --color-mgray
  margin-bottom 6px
  
.blog__repost-avatar
  display inline-block
  position relative
  top 6px
  border-radius 50%
  width 20px
  height 20px
  margin 0 4px
  background-position 50% 50%
  background-repeat no-repeat
  background-color --color-bg
  background-size cover

.blog__post-title
  font-size 17px
  margin-bottom 6px
  
.blog__post-text
  font-size 13px
  color --color-mgray
  overflow hidden 
  
.blog__post-info
  position absolute
  bottom 8px
  left 24px
  right 24px
  border-top 1px solid --color-xlgray
  padding-top 8px
  display flex
  justify-content space-between
  align-items center
  font-size 13px
  color --color-lgray
  
.blog__post-time
  padding-left 23px
  background url('../img/time.svg') 0 2px no-repeat transparent
  background-size 15px 15px
  
.blog__post-data
  display flex
  justify-content flex-end
  .post-view__icon-comment
    top 5px