.login-form__item--publish
  position relative

.publish__input--title
  width calc(100% - 40px)
  font-size 18px
  font-weight 700
  
.info-button
  float right
  width 20px
  height 20px
  margin 10px
  background url('../img/info-button.svg') 50% 50% no-repeat transparent
  background-size 20px 20px
  opacity .75
  transition all .3s ease
  &:hover
    cursor pointer
    opacity 1
  
.publish__info-alert
  width max-content
  margin-top 8px
  font-size 12px
  color --color-mgray
  padding 4px 16px
  background --color-bg-lite
  border 1px solid --color-lgreen
  border-radius 5px
  
#post-body
  width 100%
  height 256px
  border-color --color-xlgray
  margin-bottom 32px
      
.publish__setup-wrapper
  width 100%
  display flex
  
.publish__setup-block
  width 50%