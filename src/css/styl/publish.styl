.publish__input-wrapper
  display flex
  align-items baseline
  
.publish__input-name
  width 86px
  font-size 18px
  font-weight 700
  text-align right
  padding-right 16px
  
.publish__input-field
  position relative
  width 914px
  padding-right 40px
  padding-bottom 16px

.login-form__item--publish
  position relative
  
.publish__info-button
  position absolute
  top 0
  right 0
  font-size 18px
  color --color-lgray
  width 16px
  height 18px
  margin 8px 12px
  transition all .3s ease
  &:hover
    cursor pointer
    color --color-mgray
  
.publish__info-alert
  width max-content
  margin-top 8px
  font-size 12px
  color --color-dgray
  padding 8px 16px
  background --color-xlgreen
  border-radius 3px
  
#postBody
  width 100%
  
.publish__image-upload
  text-align center
  font-size 13px
  padding 4px 16px
  background --color-bg-lite
  border 1px solid --color-xlgray
  border-top-style dashed

.publish__setup-wrapper
  width 100%
  display flex
  
.publish__setup-block
  width 50%
  
.publish__post-btn-group
  padding-left 86px
  
// SimpleMDE Editor styles overwrite

.editor-toolbar
  background --color-bg-lite
  opacity 1 !important
  border-radius 0 !important
  border-top 1px solid --color-xlgray !important
  border-left 1px solid --color-xlgray !important
  border-right 1px solid --color-xlgray !important
  &:before
    margin-bottom 3px !important
  &:after
    margin-top 3px !important
  &.fullscreen
    top 59px !important
  .fa
    color --color-lgray !important
    transition all .3s ease
    outline none   
  &:hover
    .fa
      color --color-mgray !important
      &:hover
        color --color-dgray !important
    
.CodeMirror
  height 296px !important
  color --color-dgray !important
  border 1px solid --color-xlgray !important
  border-bottom none !important
  border-radius 0 !important
  
.CodeMirror-fullscreen,.editor-preview-side
  top 109px !important

.CodeMirror-fullscreen
  height auto !important
  
.editor-preview,.editor-preview-side
  padding 16px !important
  background --color-default !important