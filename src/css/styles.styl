

// Mixins

clearfix()
  &:before, &:after
    content ''
    display table
  &:after
    clear both

fixed(t = 0, r = 0, b = 0, l = 0)
  position fixed
  top t
  right r
  bottom b
  left l

absolute(t = 0, r = 0, b = 0, l = 0)
  position absolute
  top t
  right r
  bottom b
  left l


