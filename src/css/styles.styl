// Modifiers

.image--mobile
  display none
  @media screen and (max-width: 620px)
    display block
    margin 0 auto
    height auto
    max-width 100%
    max-height 80vw

.nsfw-image
  display flex
  color --color-brand
  font-size 13px
  padding 16px
  text-align center
  align-items center
  justify-content center
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background --color-bg-lite

.nsfw-warning
  margin-right 5px
  position relative
  top -2px
  font 12px --font-base
  font-weight normal
  color --color-brand
  padding 0 4px
  border 1px solid --color-brand
  border-radius 3px

.tag-block__top-post:first-child
  .nsfw-warning
    font-size 13px
    top -4px
    
.feed__post-title
  .nsfw-warning
    top -1px

.nsfw-warning--recent
  top 0px

.payout-declined
  text-decoration line-through

.error-block
  position relative
  text-align center
  margin 32px auto
  width 600px
  height 600px
  @media screen and (max-height: 800px)
    width 70vh
    height 70vh

.error-block--404
  background url('../img/404.svg') 50% 50% no-repeat transparent
  
.error-block--down
  width 960px !important
  background url('../img/robot.svg') 50% 50% no-repeat transparent
  
.error-block__message
  text-align left
  padding-top 64px
  padding-left 352px
  
.error-block__title
  margin-bottom 8px

.error-block__text
  font-size 18px
  
.error-block__back
  display inline-block
  position relative
  top calc(100% + 18px)
  font-size 15px
  &:hover
    text-decoration underline
  @media screen and (max-height: 800px)
    top calc(100% + 10px)

.share-icons__wrapper
  opacity 0
  width 40px
  height auto
  position fixed
  bottom calc(50vh - 98px)
  left 20px
  transition all .5s ease
  z-index 10
  span
    display block
    margin-bottom 12px
    &:last-child
      margin-bottom 0
  @media screen and (max-width: 1060px)
    width 36px
    bottom calc(50vh - 90px)
    left 12px
      
.share-icons__wrapper--visible
  opacity 1
    
.share-icon
  position relative
  display block
  background --color-default
  width 40px
  height 40px
  border-radius 50%
  padding 11px 0
  text-align center
  color --color-mgray
  font-size 18px
  font-family 'fa-icons' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  transition all .3s ease
  @media screen and (max-width: 1060px)
    width 36px
    height 36px
    font-size 16px
    padding 10px 0
  &:after
    position absolute
    display block
    content ''
    transition all .3s ease
    border-radius 50%
    top 0
    left 0
    right 0
    bottom 0
    border 1px solid --color-bg
  &:hover
    cursor pointer
    &:after
      border-color --color-xlgray
    
    
.share-icon--facebook
  &:hover
    color #3b5998

.share-icon--google-plus
  &:hover
    color #dd4b39
  
.share-icon--twitter
  &:hover
    color #55acee
  
.share-icon--vk
  &:hover
    color #45668e

