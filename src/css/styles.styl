// Modifiers

.image--mobile
  display none
  @media screen and (max-width: 620px)
    display block
    margin 0 auto
    height auto
    max-width 100%
    max-height 80vw

.nsfw-image
  display flex
  color --color-brand
  font-size 13px
  padding 70px 16px
  text-align center
  align-content center
  justify-content center
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background #fff

.nsfw-warning
  margin-right 5px
  position relative
  top -2px
  font 12px --font-base
  font-weight normal
  color --color-brand
  padding 0 5px
  border 1px solid --color-brand
  border-radius 3px

.tag-block__top-post:first-child
  .nsfw-warning
    font-size 13px
    top -4px

.nsfw-warning--recent
  top 0px

.payout-declined
  text-decoration line-through

.error-block
  position relative
  text-align center
  margin 32px auto
  width 600px
  height 600px
  @media screen and (max-height: 800px)
    width 70vh
    height 70vh

.error-block--404
  background url('../img/404.svg') 50% 50% no-repeat transparent
  
.error-block--down
  width 960px !important
  background url('../img/robot.svg') 50% 50% no-repeat transparent
  
.error-block__message
  text-align left
  padding-top 64px
  padding-left 352px
  
.error-block__title
  margin-bottom 8px

.error-block__text
  font-size 18px
  
.error-block__back
  display inline-block
  position absolute
  font-size 15px
  bottom -40px
  left calc(50% - 68px)
  &:hover
    text-decoration underline
  @media screen and (max-height: 800px)
    bottom -32px

.share-icons__wrapper
  opacity 0
  width 40px
  height auto
  position fixed
  bottom calc(50vh - 98px)
  left 20px
  transition all .5s ease
  z-index 10
  span
    display block
    margin-bottom 12px
    &:last-child
      margin-bottom 0
  @media screen and (max-width: 1060px)
    width 32px
    bottom calc(50vh - 82px)
    left 16px
      
.share-icons__wrapper--visible
  opacity 1
    
.share-icon
  position relative
  display block
  width 40px
  height 40px
  background url('../img/share-buttons.svg') 0 0 no-repeat transparent
  background-size 160px 40px
  @media screen and (max-width: 1060px)
    width 32px
    height 32px
    background-size 128px 32px
  &:before,&:after
    position absolute
    display block
    content ''
    transition all .3s ease
    border-radius 50%
  &:before
    top 1px
    left 1px
    right 1px
    bottom 1px
    background --color-lgray
    z-index -1
  &:after
    top 0
    left 0
    right 0
    bottom 0
    border 1px solid transparent
  &:hover
    cursor pointer
    &:before
      background --color-dgray
    &:after
      top -4px
      left -4px
      right -4px
      bottom -4px
      border-color --color-lgray
    
    
.share-icon--facebook
  background-position 0 0

.share-icon--google-plus
  background-position 66.67% 0
  
.share-icon--twitter
  background-position 33.33% 0
  
.share-icon--vk
  background-position 100% 0

